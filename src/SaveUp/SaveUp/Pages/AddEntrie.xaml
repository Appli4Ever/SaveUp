<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaveUp.Pages.AddEntrie"
             Title="Eintrag Erfassen"
             xmlns:vm="clr-namespace:SaveUp.ViewModels">

    <ContentPage.BindingContext>
        <vm:AddEntrieViewModel/>
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Entry Text="{Binding Path=}"></Entry>
        <Entry Text="{Binding Path=Amount}"></Entry>
        <Button Text="Erfassen" Command="{Binding Path=}"></Button>
    </VerticalStackLayout>
</ContentPage>