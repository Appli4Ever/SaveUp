<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaveUp.Pages.AddEntrie"
             Title="Eintrag Erfassen"
             xmlns:vm="clr-namespace:SaveUp.ViewModels"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design">

    <d:ContentPage.BindingContext>
        <vm:AddEntrieViewModel></vm:AddEntrieViewModel>
    </d:ContentPage.BindingContext>

    <VerticalStackLayout>
        <Entry Text="{Binding Path=Entrie.Description}"></Entry>
        <Entry Text="{Binding Path=Entrie.Amount}"></Entry>
        <Button Text="Erfassen" Command="{Binding Path=AddEntrieCommand}"></Button>
    </VerticalStackLayout>
</ContentPage>