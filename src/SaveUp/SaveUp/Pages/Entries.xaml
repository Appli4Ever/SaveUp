<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaveUp.Pages.Entries"
             Title="Einträge"
             xmlns:vm="clr-namespace:SaveUp.ViewModels">
    <VerticalStackLayout>
        <ListView ItemsSource="{Binding Path=Entries}" SelectedItem="" SelectionMode="Single" MaximumHeightRequest="500">
        </ListView>

        <Button Text="Ausgeählter Eintrag Löschen" Command="{Binding Path=DeleteEntrieCommand}"></Button>
    </VerticalStackLayout>
</ContentPage>