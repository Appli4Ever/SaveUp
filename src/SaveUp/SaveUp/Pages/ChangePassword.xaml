<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaveUp.Pages.ChangePassword"
             Title="ChangePassword"
             xmlns:vm="clr-namespace:SaveUp.ViewModels">

    <VerticalStackLayout>
        <Label Text="Neues Passwort"></Label>
        <Entry Text="{Binding Path=Password}"></Entry>
        <Label Text="Passwort Bestätigen"></Label>
        <Entry Text="{Binding Path=VerifyPassword}"></Entry>

        <Button Text="Passwort Ändern" Command="{Binding Path=PasswordChangeCommand}"></Button>
    </VerticalStackLayout>
</ContentPage>