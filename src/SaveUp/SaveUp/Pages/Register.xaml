<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaveUp.Pages.Register"
             Title="Registrieren">
    <VerticalStackLayout>
        <Label Text="Benutzername"></Label>
        <Entry Text="{Binding Path=Username}"></Entry>

        <Label Text="Passwort"></Label>
        <Entry Text="{Binding Path=Password}"
               IsPassword="True"></Entry>

        <Button Text="Registrieren" Command="{Binding Path=RegisterCommand}"></Button>
    </VerticalStackLayout>
</ContentPage>